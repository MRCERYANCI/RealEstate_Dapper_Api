@model List<ResultProductAndProductDetailDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="row">
                @foreach (var item in Model)
                {
                    decimal fiyat = item.ProductPrice;

                    <div class="col-lg-4 col-md-6 listing-img mt-5 pt-md-2">
                        <a href="@Url.Action("PropertySingle","Property",new{slug=ViewBag.Slug,id=item.ProductId})">
                            <div class="box16">
                                <div class="rentext-listing-category"><span>@item.ProductType</span><span>@item.CategoryName</span></div>
                                <img class="img-fluid" src="@item.ProductCoverImage" alt="@item.ProductTitle" style="width:555px;height:250px;">
                                <div class="box-content">
                                    <h3 class="title">@fiyat.ToString("C")</h3>

                                </div>
                            </div>
                        </a>
                        <div class="listing-details blog-details align-self">
                            <h4 class="user_title agent">
                                <a href="#url">@item.ProductTitle</a>
                            </h4>
                            <p class="user_position">@(item.ProductAdress.Length > 27 ? item.ProductAdress.Substring(0, 27) + "..." : item.ProductAdress)</p>
                            <ul class="mt-3 estate-info">
                                <li><span class="fa fa-bed"></span> @item.BedRoomCount Yatak</li>
                                <li><span class="fa fa-shower"></span> @item.BathCount Banyo</li>
                                <li><span class="fa fa-share-square-o"></span> @item.ProductSize m<sup>2</sup></li>
                            </ul>
                            <div class="author align-items-center mt-4">
                                <a href="#img" class="comment-img">
                                    <img src="@item.Image" alt="" class="img-fluid">
                                </a>
                                <ul class="blog-meta">
                                    <li>
                                        <a href="#url">@item.Name @item.Surname </a>
                                    </li>
                                    <li class="meta-item blog-lesson">
                                        <span class="meta-value"> Satış Acentesi</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

