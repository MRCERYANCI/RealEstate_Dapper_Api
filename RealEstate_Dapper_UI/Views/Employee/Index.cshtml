@model List<ResultEmployeeDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/Index.cshtml";
	int Count = 0;
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Personel Tablosu(@Model.Count())</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Adı Soyadı</th>
								<th scope="col">Unvanı</th>
								<th scope="col">Durumu</th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var x in Model)
							{
								Count++;
								<tr>
									<td>@Count</td>
									<td>@x.EmployeeName</td>
									<td>@x.EmployeeTitle</td>
									<td>@(x.EmployeeStatus == true ? "Aktif" : "Pasif")</td>
									<td><a href="/Employee/DeleteEmployee?EmployeeId=@x.EmployeeID" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/Employee/GetEmployee?EmployeeId=@x.EmployeeID" class="btn btn-outline-success">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<a href="/Employee/NewAddEmployee" class="btn btn-outline-info">Yeni Personel Girişi</a>
			</div>
		</div>
	</div>
</div>

