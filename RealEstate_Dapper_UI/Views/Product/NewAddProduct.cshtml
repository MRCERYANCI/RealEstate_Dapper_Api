@model CreateProductDto

@{
	ViewData["Title"] = "NewAddProduct";
	Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-sm-12 col-xl-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Yeni İlan Ekleme Formu</h6>
				<form method="post">
					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">İlan Başlığı</label>
						<input type="text" class="form-control" asp-for="ProductTitle" id="exampleInputEmail1" aria-describedby="emailHelp">
					</div>
					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">Şehir</label>
						<input type="text" class="form-control" asp-for="ProductCity" id="exampleInputEmail1" aria-describedby="emailHelp">
					</div>
					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">İlçe</label>
						<input type="text" class="form-control" asp-for="ProductDistrict" id="exampleInputEmail1" aria-describedby="emailHelp">
					</div>
					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">Fiyat</label>
						<input type="number" class="form-control" asp-for="ProductPrice" id="exampleInputEmail1" aria-describedby="emailHelp">
					</div>
					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">Kategori</label>
						@Html.DropDownListFor(x=>x.ProductCategory,(List<SelectListItem>)ViewBag.CategoryList,new {@class="form-control"})
					</div>
					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">Kapak Fotoğrafı</label>
						<input type="text" class="form-control" asp-for="ProductCoverImage" id="exampleInputEmail1" aria-describedby="emailHelp">
					</div>
					<div class="mb-3">
						<input type="hidden" class="form-control" asp-for="EmployeeID" value="1" id="exampleInputEmail1" aria-describedby="emailHelp">
					</div>
					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">İlan Açık Adresi</label>
						<textarea rows="7" class="form-control" asp-for="ProductAdress" id="exampleInputEmail1" aria-describedby="emailHelp"></textarea>
					</div>
					<button type="submit" class="btn btn-primary">Kaydet</button>
				</form>
			</div>
		</div>

	</div>
</div>

