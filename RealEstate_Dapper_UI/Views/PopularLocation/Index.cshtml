@model List<ResultPopularLocationDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/Index.cshtml";
	int Count = 0;
}
<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Popüler Lokasyonlar Tablosu(@Model.Count())</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Şehir Adı</th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var x in Model)
							{
								Count++;
								<tr>
									<td>@Count</td>
									<td><img src="@x.ImageUrl" width="50" height="50" style="margin-right:10px;"/> @x.CityName</td>
									<td><a href="/PopularLocation/DeletePopularLocation?PopularLocationId=@x.LocationId" class="btn btn-outline-danger"  onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
									<td><a href="/PopularLocation/GetPopularLocation?PopularLocationId=@x.LocationId" class="btn btn-outline-success">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<a href="/PopularLocation/NewAddPopularLocation" class="btn btn-outline-info">Yeni Pöpüler Şehir Girişi</a>
			</div>
		</div>
	</div>
</div>

