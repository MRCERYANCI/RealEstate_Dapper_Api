@model UpdateWhoWeAreDto

@{
    ViewData["Title"] = "GetWhoWeAre";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-sm-12 col-xl-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Yeni Biz Kimiz Formu</h6>
				<form method="post">
					<input type="hidden" class="form-control" asp-for="WhoWeAreId" id="exampleInputEmail1" aria-describedby="emailHelp">
					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">Başlık</label>
						<input type="text" class="form-control" asp-for="WhoWeAreTitle" id="exampleInputEmail1" aria-describedby="emailHelp">
					</div>
					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">Alt Başlık</label>
						<input type="text" class="form-control" asp-for="WhoWeAreSubTitle" id="exampleInputEmail1" aria-describedby="emailHelp">
					</div>
					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">Açıklama 1</label>
						<textarea class="form-control" asp-for="WhoWeAreDescription1" rows="6"></textarea>
					</div>
					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">Açıklama 2</label>
						<textarea class="form-control" asp-for="WhoWeAreDescription2" rows="6"></textarea>
					</div>
					<button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
				</form>
			</div>
		</div>

	</div>
</div>

